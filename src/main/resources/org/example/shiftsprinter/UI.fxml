<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.shiftsprinter.WindowController">
   <children>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                   <DatePicker fx:id="datePicker" minHeight="-Infinity" minWidth="-Infinity" />
                   <Button fx:id="generateButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Generate" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                   <Slider fx:id="numDaysSlider" blockIncrement="1.0" majorTickUnit="1.0" max="0.0" minHeight="-Infinity" minWidth="-Infinity" minorTickCount="0" prefHeight="38.0" prefWidth="203.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
                  <TextField fx:id="numDaysTextField" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="33.0" />
               </children>
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="-Infinity" minWidth="-Infinity">
               <content>
                  <VBox fx:id="timePickersVBox" alignment="CENTER" spacing="15.0">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding></VBox>
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
             <TextField fx:id="subjectTextField" minHeight="-Infinity" minWidth="-Infinity" />
             <TextArea fx:id="shiftsTextArea" minHeight="-Infinity" minWidth="-Infinity" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</HBox>
