<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.shiftsprinter.ShiftsPrinterController">
   <content>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                   <DatePicker fx:id="datePicker" prefHeight="26.0" prefWidth="200.0" />
                   <Button fx:id="printButton" mnemonicParsing="false" onAction="#handlePrintButtonClick" text="Generate" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                   <Slider fx:id="numDaysSlider" blockIncrement="1.0" majorTickUnit="1.0" max="0.0" minorTickCount="0" prefHeight="38.0" prefWidth="200.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
                   <Label fx:id="sliderValueLabel" prefHeight="26.0" prefWidth="61.0" />
               </children>
            </HBox>
            <VBox fx:id="timePickersVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" />
             <TextField fx:id="subjectTextField" prefHeight="26.0" prefWidth="200.0" />
             <TextArea fx:id="shiftsTextArea" prefHeight="200.0" prefWidth="200.0" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
